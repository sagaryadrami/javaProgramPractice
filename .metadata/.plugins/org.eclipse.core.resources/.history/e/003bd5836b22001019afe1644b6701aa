package org.selenium.testcase;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.Assert;
import org.testng.annotations.Test;
import org.openqa.selenium.JavascriptExecutor;

public class MyFirstTestCase {
	
	@Test
	public void guestCheckoutUsingDirectBankTransfer() throws InterruptedException {
		
		WebDriver driver = new ChromeDriver();
		WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(10));
		driver.get("https://askomdch.com/");
		driver.manage().window().maximize();
		driver.findElement(By.xpath("//li[@id='menu-item-1227']")).click();
		driver.findElement(By.id("woocommerce-product-search-field-0")).sendKeys("blue");
		driver.findElement(By.cssSelector("button[value='Search']")).click();
		Thread.sleep(1000);

		Assert.assertEquals(
				driver.findElement(By.cssSelector("h1[class='woocommerce-products-header__title page-title']")).getText(), "Search results: “blue”");
	driver.findElement(By.cssSelector("a[href='?add-to-cart=1215']")).click();
	Thread.sleep(2000);
	driver.findElement(By.cssSelector("a[class=\"added_to_cart wc-forward\"]")).click();
	Assert.assertEquals(driver.findElement(By.cssSelector("td[class='product-name'] a")).getText(), "Blue Shoes");
	Thread.sleep(3000);
//	JavascriptExecutor js = (JavascriptExecutor)driver;
//	js.executeScript("window.scrollBy(500,0)");
	driver.findElement(By.cssSelector(".checkout-button.button.alt.wc-forward")).click();	
	driver.findElement(By.id("billing_first_name")).sendKeys("sagar");
	driver.findElement(By.id("billing_last_name")).sendKeys("yadrami");
	driver.findElement(By.id("billing_address_1")).sendKeys("shantaveernagar");
	driver.findElement(By.id("billing_city")).sendKeys("bangalore");
	driver.findElement(By.id("billing_postcode")).sendKeys("90089");
	driver.findElement(By.id("billing_email")).sendKeys("sagaryadrami@gmail.com");
	driver.findElement(By.id("place_order")).click();	
	Thread.sleep(5000);
	
	wait.until(ExpectedConditions.elementToBeClickable(
			By.cssSelector(".woocommerce-notice.woocommerce-notice--success.woocommerce-thankyou-order-received"));
	Assert.assertEquals(driver.findElement(By.cssSelector(".woocommerce-notice.woocommerce-notice--success.woocommerce-thankyou-order-received")).getText(), "Thank you. Your order has been received.");
		
		
	}
}
